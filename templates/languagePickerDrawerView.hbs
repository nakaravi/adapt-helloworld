{{! make the _globals object in course.json available to this template}}
{{import_globals}}
<div class="ravpicker">
  {{{a11y_aria_label _globals._extensions._ravPicker.ravSelector}}}
  <div class="ravpicker-inner" role="list">
     {{#each _ravs}}
        <div class="ravpicker-rav drawer-item {{#if _isSelected}}selected{{/if}} {{_rav}} {{#equals _direction "rtl"}}dir-rtl{{/equals}}" role="listitem">
          <button class="base drawer-item-open" data-rav="{{_rav}}" {{#if _isSelected}}disabled{{/if}}>{{{compile displayName}}}</button>
        </div>
     {{/each}}
  </div>
</div>
